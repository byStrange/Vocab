{"ast":null,"code":"export default {\n  name: \"Box\",\n  props: [\"showWord\"],\n  data() {\n    return {\n      randomWordFromChoosenTopic: \"\",\n      topics: [{\n        name: \"topic 1\",\n        id: \"1\",\n        words: [[\"accused\", \"aybdor\"], [\"play\", \"oynamoq\"], [\"choose\", \"tanlamoq\"]],\n        choosen: true\n      }, {\n        name: \"topic 2\",\n        id: \"2\",\n        words: [[\"accused\", \"aybdor\"], [\"play\", \"oynamoq\"], [\"choose\", \"tanlamoq\"]],\n        choosen: false\n      }, {\n        name: \"topic 3\",\n        id: \"3\",\n        words: [[\"accused\", \"aybdor\"], [\"play\", \"oynamoq\"], [\"choose\", \"tanlamoq\"]],\n        choosen: false\n      }]\n    };\n  },\n  methods: {\n    selectTopic(e) {\n      const topicId = e;\n      const topic = this.topics.find(topic => topic.id === topicId);\n      topic.choosen = true;\n\n      // change all other topics' choosen property to false\n      this.topics.forEach(topic => {\n        if (topic.id !== topicId) {\n          topic.choosen = false;\n        }\n      });\n\n      // change the showWord property to true\n      this.$emit(\"changeShowWord\", true);\n    }\n  },\n  mounted() {\n    var choosenTopic = this.topics.find(topic => topic.choosen === true);\n    this.randomWordFromChoosenTopic = choosenTopic.words[Math.floor(Math.random() * choosenTopic.words.length)][Math.floor(Math.random() * 2)];\n  }\n};","map":{"version":3,"mappings":"AAqBA,eAAe;EACbA,IAAI,EAAE,KAAK;EACXC,KAAK,EAAE,CAAC,UAAU,CAAC;EAEnBC,IAAI,GAAG;IACL,OAAO;MACLC,0BAA0B,EAAE,EAAE;MAC9BC,MAAM,EAAE,CACN;QACEJ,IAAI,EAAE,SAAS;QACfK,EAAE,EAAE,GAAG;QACPC,KAAK,EAAE,CACL,CAAC,SAAS,EAAE,QAAQ,CAAC,EACrB,CAAC,MAAM,EAAE,SAAS,CAAC,EACnB,CAAC,QAAQ,EAAE,UAAU,CAAC,CACvB;QACDC,OAAO,EAAE;MACX,CAAC,EACD;QACEP,IAAI,EAAE,SAAS;QACfK,EAAE,EAAE,GAAG;QACPC,KAAK,EAAE,CACL,CAAC,SAAS,EAAE,QAAQ,CAAC,EACrB,CAAC,MAAM,EAAE,SAAS,CAAC,EACnB,CAAC,QAAQ,EAAE,UAAU,CAAC,CACvB;QACDC,OAAO,EAAE;MACX,CAAC,EACD;QACEP,IAAI,EAAE,SAAS;QACfK,EAA