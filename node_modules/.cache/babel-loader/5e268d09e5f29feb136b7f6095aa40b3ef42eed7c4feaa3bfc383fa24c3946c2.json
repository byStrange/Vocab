{"ast":null,"code":"export default {\n  name: \"Box\",\n  props: [\"showWord\"],\n  data() {\n    return {\n      wordFromChoosenTopic: \"\",\n      topics: [{\n        name: \"topic 1\",\n        id: \"1\",\n        words: [[\"accused\", \"aybdor\"], [\"play\", \"oynamoq\"], [\"choose\", \"tanlamoq\"]],\n        choosen: true\n      }, {\n        name: \"topic 2\",\n        id: \"2\",\n        words: [[\"accused\", \"aybdor\"], [\"play\", \"oynamoq\"], [\"choose\", \"tanlamoq\"]],\n        choosen: false\n      }, {\n        name: \"topic 3\",\n        id: \"3\",\n        words: [[\"accused\", \"aybdor\"], [\"play\", \"oynamoq\"], [\"choose\", \"tanlamoq\"]],\n        choosen: false\n      }]\n    };\n  },\n  methods: {\n    initWord() {\n      var choosenTopic = this.topics.find(topic => topic.choosen === true);\n      this.wordFromChoosenTopic = choosenTopic.words.shift()[Math.floor(Math.random() * 2)];\n    },\n    selectTopic(e) {\n      const topicId = e;\n      const topic = this.topics.find(topic => topic.id === topicId);\n      topic.choosen = true;\n      this.topics.forEach(topic => {\n        if (topic.id !== topicId) {\n          topic.choosen = false;\n        }\n      });\n      this.$emit(\"changeShowWord\", true);\n      this.$emit(\"startTest\", topic);\n      this.initWord();\n    }\n  },\n  mounted() {\n    this.initWord();\n  }\n};","map":{"version":3,"mappings":"AAqBA,eAAe;EACbA,IAAI,EAAE,KAAK;EACXC,KAAK,EAAE,CAAC,UAAU,CAAC;EACnBC,IAAI,GAAG;IACL,OAAO;MACLC,oBAAoB,EAAE,EAAE;MACxBC,MAAM,EAAE,CACN;QACEJ,IAAI,EAAE,SAAS;QACfK,EAAE,EAAE,GAAG;QACPC,KAAK,EAAE,CACL,CAAC,SAAS,EAAE,QAAQ,CAAC,EACrB,CAAC,MAAM,EAAE,SAAS,CAAC,EACnB,CAAC,QAAQ,EAAE,UAAU,CAAC,CACvB;QACDC,OAAO,EAAE;MACX,CAAC,EACD;QACEP,IAAI,EAAE,SAAS;QACfK,EAAE,EAAE,GAAG;QACPC,KAAK,EAAE,CACL,CAAC,SAAS,EAAE,QAAQ,CAAC,EACrB,CAAC,MAAM,EAAE,SAAS,CAAC,EACnB,CAAC,QAAQ,EAAE,UAAU,CAAC,CACvB;QACDC,OAAO,EAAE;MACX,CAAC,EACD;QACEP,IAAI,EAAE,SAAS;QACfK,EAAE,EAAE,GAAG;QACPC,KAAK,EAAE,CACL,CAAC,SAAS,EAAE,QAAQ,C