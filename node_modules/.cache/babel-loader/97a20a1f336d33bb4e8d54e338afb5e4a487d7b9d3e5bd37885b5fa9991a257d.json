{"ast":null,"code":"import { data } from '@/data.js';\nexport default {\n  name: \"Box\",\n  props: [\"showWord\", \"wordFromChoosenTopic\"],\n  data() {\n    return {\n      topics: data\n    };\n  },\n  methods: {\n    selectTopic(e) {\n      const topicId = e;\n      const topic = this.topics.find(topic => topic.id === topicId);\n      topic.choosen = true;\n      this.topics.forEach(topic => {\n        if (topic.id !== topicId) {\n          topic.choosen = false;\n        }\n      });\n      this.$emit(\"changeShowWord\", true);\n      this.$emit(\"startTest\", topic);\n    }\n  }\n};","map":{"version":3,"mappings":"AAqBA,SAASA,IAAG,QAAS,WAAU;AAC/B,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,KAAK,EAAE,CAAC,UAAU,EAAE,sBAAsB,CAAC;EAC3CF,IAAI,GAAG;IACL,OAAO;MACLG,MAAM,EAAEH;IACV,CAAC;EACH,CAAC;EACDI,OAAO,EAAE;IACPC,WAAW,CAACC,CAAC,EAAE;MACb,MAAMC,OAAM,GAAID,CAAC;MACjB,MAAME,KAAI,GAAI,IAAI,CAACL,MAAM,CAACM,IAAI,CAAED,KAAK,IAAKA,KAAK,CAACE,EAAC,KAAMH,OAAO,CAAC;MAC/DC,KAAK,CAACG,OAAM,GAAI,IAAI;MAEpB,IAAI,CAACR,MAAM,CAACS,OAAO,CAAEJ,KAAK,IAAK;QAC7B,IAAIA,KAAK,CAACE,EAAC,KAAMH,OAAO,EAAE;UACxBC,KAAK,CAACG,OAAM,GAAI,KAAK;QACvB;MACF,CAAC,CAAC;MAEF,IAAI,CAACE,KAAK,CAAC,gBAAgB,EAAE,IAAI,CAAC;MAClC,IAAI,CAACA,KAAK,CAAC,WAAW,EAAEL,KAAK,CAAC;IAChC;EACF;AACF,CAAC","names":["data","name","props","topics","methods","selectTopic","e","topicId","topic","find","id","choosen","forEach","$emit"],"sourceRoot":"","sources":["/home/strange/Documents/Github/vue-lessons/vocab/src/components/Box.vue"],"sourcesContent":["<template>\n  <div class=\"box\">\n    <div class=\"content\" ref=\"word\" v-if=\"showWord\">\n      <span> {{ wordFromChoosenTopic }}</span>\n    </div>\n    <div class=\"topics\" ref=\"topics\" v-if=\"!showWord\">\n      <template v-for=\"topic in topics\" :key=\"topic.id\">\n        <div\n          class=\"topic\"\n          :class=\"{ choosen: topic.choosen }\"\n          @click=\"selectTopic(topic.id)\"\n          :data-id=\"topic.id\"\n        >\n          <span>{{ topic.name }}</s